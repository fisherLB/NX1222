                    <div class="logo_box"><img src="@(MvcCore.Unity.Get<JN.Data.Service.ISysSettingService>().Single(1).LogoImage)" /></div>
                    <div class="login_box">
                        <div class="panel-body">
                            <form action="/user/login/logins" method="post" id="frmLogin">
                                <!--<strong style="color:red">抱歉，现在系统暂停维护中，稍后开放，谢谢您的等待</strong>-->
                                <div class="input_group">
                                    @*<label class="control-label" for="username">@T("用户名")</label>*@
                                    <input type="text" required="" value="" name="username" placeholder="用户名" />

                                </div>
                                <div class="input_group">
                                    @*<label class="control-label" for="password">@T("密码")</label>*@
                                    <input type="password" required="" value="" name="password" placeholder="密码" />

                                </div>
                                <div class="input_group btng">
                                    @*<label class="control-label" for="password">@T("密码")</label>*@
                                    <input type="text" required="" value="" name="code" placeholder="验证码" />
                                    <img id="imgCode" src="/UserCenter/Login/GetCodeImage?id=1" onclick="ChangeCheckCode();return false;" style="width: 80px; cursor:pointer; margin-left: 16px; height: 28px; margin-top: 1px;" />

                                </div>

                                <input class="btn btn-success btn-block" value="@T("登录")" type="button" id="btnlogin" />
                                <a class="btn btn-default btn-block forgot" href="/UserCenter/Login/GetPwd">@T("忘记密码？")</a>
                            </form>
                        </div>
                    </div>
