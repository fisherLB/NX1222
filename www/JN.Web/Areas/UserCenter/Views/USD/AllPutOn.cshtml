                        <thead>
                            <tr>
                                <th class="center">
                                </th>
                                <th>@T("卖家编号")</th>
                                <th>@T("卖出数量")</th>
                                <th>@T("卖出单价")</th>
                                <th>@T("卖出金额")</th>
                                @*<th>手续费</th>*@
                                <th>@T("状态")</th>
