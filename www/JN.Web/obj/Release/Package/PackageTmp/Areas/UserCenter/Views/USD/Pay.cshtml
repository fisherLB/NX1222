<script type="text/javascript">
    $("#btnSubmit").click(function () {
        $("#formPay").ajaxSubmit({
            url: "@Url.Action("Pay")",
            type: "post",
        success: function (data) {
            if (data.Status == 200) {
                alert("@T("您已成功提交付款信息，请等待卖家审核！")");
                location.href = "@(Url.Action("ttc"))";
            } else {
                alert("@T("付款失败：")" + data.Message);
            }
        },
        error: function (aa) {
            alert(aa);
        }
    });
    });
</script>
