}
<script src="/assets/js/bootbox.min.js"></script>
    <!-- PAGE CONTENT BEGINS -->
    <div class="row">
        <div class="col-xs-12">
            <div class="table-responsive">
                <div id="sample-table-1_wrapper" class="dataTables_wrapper" role="grid">
